<h1 class="qa-title-page">Вопрос-ответ</h1>

<div class="qa-header">
    <%= link_to "Новый вопрос", new_post_path, class: "qa-btn" %>
</div>

<div class="qa-grid">
    <% @posts.each do |post| %>
    <div class="qa-card">
        <h3 class="qa-card__title">
            <%= link_to post.title, post_path(post), data: { turbo: false } %>
        </h3>

        <p class="qa-card__excerpt">
            <%= truncate(post.body.to_s, length: 140) %>
        </p>

        <div class="qa-meta">
            <span>Комментарии: <%= post.comments.count %></span>
            <span><%= l(post.created_at, format: :short) rescue post.created_at %></span>
        </div>
    </div>
    <% end %>
</div>