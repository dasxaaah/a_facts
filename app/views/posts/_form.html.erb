<%= form_with(model: post, local: true, html: { class: "qa-form", multipart: true }) do |form| %><% if post.errors.any? %>
<div class="qa-errors" role="alert">
    <p class="qa-error-title">Ошибка заполнения формы:</p>
    <ul class="qa-error-list">
        <% post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="qa-field">
    <%= form.label :title, "Заголовок" %>
    <%= form.text_field :title, class: "qa-input", placeholder: "Кратко сформулируйте вопрос", required: true %>
</div>

<div class="qa-field">
    <%= form.label :body, "Текст вопроса" %>
    <%= form.text_area :body, class: "qa-input qa-textarea", rows: 6, placeholder: "Добавьте подробности", required: true %>
</div>

<div class="qa-field">
    <%= form.label :post_image, "Картинка" %>
    <%= form.file_field :post_image, class: "qa-file" %>
</div>

<%= form.submit (post.persisted? ? "Сохранить" : "Создать вопрос"), class: "qa-btn" %>

<% end %>