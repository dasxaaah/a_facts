<%
=begin%>
<p style="color: green"><%= notice %></p>

<h2><%= @post.title %></h2>

<p>
    <strong>Автор:</strong>
    <%= @post.author.presence || "не указан" %>
</p>

<p>
    <%= simple_format(@post.body.to_s) %>
</p>

<hr>

<h2>Комментарии</h2>
<%= render @post.comments %>

<h2>Добавить комментарий</h2>
<%= render "comments/form" %>

<hr>

<div>
    <%= link_to "Редактировать пост", edit_post_path(@post) %> |
    <%= link_to "Назад к списку постов", posts_path %>
</div>
<%
=end%>


<div class="post-page">

    <article class="post-card">
        <header class="post-card__header">
            <h1 class="post-card__title"><%= @post.title %></h1>

            <div class="post-card__meta">
                <%
=begin%>
                <span class="post-card__author">
                    Автор: <strong><%= @post.author.presence || "не указан" %></strong>
                </span>
                <%
=end%>
                <span class="post-card__date">
                    <%= l(@post.created_at, format: :long) rescue @post.created_at %>
                </span>
            </div>
        </header>

        <div class="post-card__body">
            <%= simple_format(@post.body.to_s) %>
        </div>

        <footer class="post-card__footer">
            <%= link_to "Редактировать пост", edit_post_path(@post), class: "btn btn-secondary" %>
            <%= link_to "Назад к списку постов", posts_path, class: "btn btn-link" %>
        </footer>
    </article>

    <section class="comments">
        <h2 class="comments__title">Комментарии</h2>

        <div class="comments__list">
            <%= render @post.comments %>
        </div>

        <div class="comments__form">
            <h3 class="comments__form-title">Добавить комментарий</h3>
            <%= render "comments/form" %>
        </div>
    </section>
</div>