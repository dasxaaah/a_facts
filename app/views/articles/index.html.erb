<h1>Статьи user</h1>

<div class="card-grid">
    <% @articles.each do |article| %>
    <article class="card">
        <h2>
            <%= link_to article.title, article_path(article) %>
        </h2>

        <p>
            <%= truncate(article.body.to_s, length: 160) %>
        </p>

        <small>
            <%= l(article.created_at, format: :short) rescue article.created_at %>
        </small>
    </article>
    <% end %>
</div>