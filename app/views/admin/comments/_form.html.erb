<div class="comment-form">
    <%= form_with(model: [:admin, @post, @post.comments.build]) do |form| %>
    <div class="form-group">
        <%= form.label :body, "Комментарий", class: "form-label" %>
        <%= form.text_area :body, rows: 4, class: "form-input form-textarea" %>
    </div>

    <div class="form-actions">
        <%= form.submit "Отправить", class: "btn btn-primary" %>
    </div>
    <% end %>
</div>