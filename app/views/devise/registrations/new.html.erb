<div class="auth-wrapper">
    <div class="auth-container">
        <h2 class="auth-title">Регистрация</h2>

        <%= form_with(model: resource, url: registration_path(resource_name), local: true, html: { class: "auth-form" }) do |f| %>
        <%# Ошибки Devise %>
        <% if resource.errors.any? %>
        <div class="auth-errors">
            <div class="auth-error-title">Проверьте форму:</div>
            <ul>
                <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <div class="auth-field">
            <%= f.label :email, "E-mail" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
        </div>

        <div class="auth-field">
            <%= f.label :password, "Пароль" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "auth-input" %>
            <% if @minimum_password_length %>
            <div class="auth-hint">Минимум <%= @minimum_password_length %> символов</div>
            <% end %>
        </div>

        <div class="auth-field">
            <%= f.label :password_confirmation, "Повторите пароль" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
        </div>

        <div class="auth-checkbox">
            <label>
                <input type="checkbox" required>
                Я принимаю <%= link_to "условия сервиса", "/terms", class: "auth-link-inline" %>
            </label>
        </div>

        <%= f.submit "Зарегистрироваться", class: "auth-btn" %>
        <% end %>

        <div class="auth-links">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>