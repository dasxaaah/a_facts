<div class="auth-wrapper">
    <div class="auth-container">
        <h2 class="auth-title">Вход в аккаунт</h2>

        <% if resource.errors.any? %>
        <div class="auth-errors" role="alert" aria-live="polite">
            <div class="auth-error-title">Проверьте форму:</div>
            <ul>
                <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <%= form_with(model: resource, url: session_path(resource_name), local: true, data: { turbo: false },    html: { class: "auth-form", novalidate: true }) do |f| %>
        <div class="auth-field">
            <%= f.label :email, "E-mail" %>
            <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "your@email.com",
              class: "auth-input",
              required: true %>
        </div>

        <div class="auth-field">
            <%= f.label :password, "Пароль" %>
            <%= f.password_field :password,
              autocomplete: "current-password",
              placeholder: "••••••••",
              class: "auth-input",
              required: true %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="auth-checkbox">
            <label>
                <%= f.check_box :remember_me %>
                <span>Запомнить меня</span>
            </label>
        </div>
        <% end %>

        <%= f.submit "Войти", class: "auth-btn" %>
        <% end %>

        <div class="auth-links">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>